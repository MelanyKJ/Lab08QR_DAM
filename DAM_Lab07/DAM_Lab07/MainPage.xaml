<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DAM_Lab07.MainPage">

    <StackLayout Padding="12">
        <Label Text="Codigo QR" HorizontalOptions="Center" VerticalOptions="Center" FontSize="Large" Padding="20"></Label>

        <Button x:Name="btnScannerQR" Text="Escanear QR" Clicked="BtnScannerQR_Clicked" BackgroundColor="SkyBlue"></Button>
        <Entry x:Name="txtResultado" Placeholder="Mostrar QR" AnchorY="10"/>
    </StackLayout>

</ContentPage>
